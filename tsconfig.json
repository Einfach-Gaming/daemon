{
  "compilerOptions": {
    "outDir": "build",
    "lib": ["es2017"],
    "target": "es2017",

    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
