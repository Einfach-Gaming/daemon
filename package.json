{
  "author": "P4sca1",
  "name": "egmrp-daemon",
  "description": "Daemon for the EGM:RP roleplay framework, mainly used for multi server networking.",
  "version": "2.0.4",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/einfach-gaming/gmod/egmrp/daemon.git"
  },
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "dev": "nodemon",
    "start": "NODE_ENV=production node build/index.js",
    "lint": "tslint --project ./tsconfig.json",
    "lint-fix": "tslint --project ./tsconfig.json --fix",
    "tsc-check": "tsc --project ./tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc-check && lint-staged && npm run lint"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "npm run lint-fix --",
        "git add"
      ]
    },
    "ignore": [
      "*.d.ts"
    ]
  },
  "dependencies": {
    "dotenv": "7.0.0",
    "ip": "1.1.5",
    "joi": "14.3.1",
    "lodash": "4.17.11",
    "luxon": "1.12.0",
    "winston": "3.2.1",
    "winston-daily-rotate-file": "3.8.0"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.0",
    "@types/ip": "1.1.0",
    "@types/joi": "14.3.2",
    "@types/lodash": "4.14.123",
    "@types/luxon": "1.11.1",
    "@types/node": "10.14.4",
    "concurrently": "4.1.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "ts-node": "8.0.3",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.3.4000",
    "typescript-tslint-plugin": "0.3.1"
  }
}
