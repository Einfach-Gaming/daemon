{
  "author": "P4sca1",
  "name": "egmrp-",
  "description": "Internal session based api for IPS Hosting.",
  "version": "1.2.0",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/P4sca1/ips-hosting-api.git"
  },
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "build-watch": "tsc --watch",
    "node-watch": "nodemon --delay 2.5 --watch build build/index.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run build-watch\" \"npm run node-watch\"",
    "start": "NODE_ENV=production node build/index.js",
    "lint": "tslint --project ./tsconfig.json",
    "lint-fix": "tslint --project ./tsconfig.json --fix",
    "tsc-check": "tsc --project ./tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc-check && lint-staged && npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "npm run lint-fix --",
      "git add"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2",
    "typescript-tslint-plugin": "^0.2.1"
  }
}
